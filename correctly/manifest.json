{
  "manifest_version": 3,
  "name": "Correctly",
  "version": "1.2",
  "description": "A grammar correction extension that helps you write better",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Correctly - Grammar Checker",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "https://huggingface.co/*",
    "https://cdn.jsdelivr.net/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/transformers.min.js",
        "lib/ort-wasm-simd-threaded.jsep.wasm",
        "lib/ort-wasm-simd-threaded.jsep.mjs"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
